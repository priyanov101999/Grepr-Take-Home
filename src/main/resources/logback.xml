<configuration>

    <!-- Ensure you capture DEBUG logs from all packages -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Specific loggers for different packages (optional) -->
    <logger name="org.example.resources" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.example.service" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Console appender configuration (optional) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender configuration -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
